{
  "name": "@courierx/monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Multi-provider email delivery service",
  "author": "wave",
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "typecheck": "turbo run typecheck",
    "db:generate": "turbo run db:generate",
    "db:push": "turbo run db:push",
    "db:migrate": "turbo run db:migrate",
    "db:seed": "turbo run db:seed",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build && changeset publish",
    "publish-packages": "pnpm build && pnpm changeset publish",
    "pr:list": "./scripts/pr-manager.sh list",
    "pr:auto-merge": "./scripts/pr-manager.sh auto-merge",
    "pr:status": "./scripts/pr-manager.sh status",
    "pr:cleanup": "./scripts/pr-manager.sh cleanup",
    "pr:close-stale": "./scripts/pr-manager.sh close-stale"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "turbo": "^2.5.8",
    "typescript": "^5.3.3"
  }
