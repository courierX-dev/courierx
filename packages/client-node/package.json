{
    "name": "@courierx/client",
    "version": "2.0.0",
    "description": "Node.js client for CourierX API",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "files": [
        "dist"
    ],
    "publishConfig": {
        "access": "public"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/courierX-dev/courierx.git",
        "directory": "packages/client-node"
    },
    "keywords": [
        "email",
        "courierx",
        "client",
        "sdk",
        "api",
        "typescript",
        "nodejs"
    ],
    "author": "CourierX Team",
    "license": "MIT",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
