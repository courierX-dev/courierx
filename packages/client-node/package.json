        "format": "prettier --write src",
        "typecheck": "tsc --noEmit"
    },
    "dependencies": {
        "@courierx/shared": "workspace:*"
    },
    "devDependencies": {
        "@types/node": "^20.11.0",
        "eslint": "^8.56.0",
        "@typescript-eslint/eslint-plugin": "^8.46.3",
        "@typescript-eslint/parser": "^6.19.0",
        "prettier": "^3.2.4",
        "typescript": "^5.3.3",
        "vitest": "^1.2.0"
    }
